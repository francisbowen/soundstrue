<div class="page-width text-and-cta">
    <div class="grid">
        <div class="grid__item">
        {% if section.settings.heading != blank or section.settings.content != blank %}
            <div class="text-wrapper">
            {% if section.settings.heading != blank %}
                <div class="rich-text__heading--{{ section.settings.text_size }}">
                    <h2 class="h3 heading">{{ section.settings.heading | escape }}</h2>
                </div>
            {% endif %}
            {% if section.settings.content != blank %}
                <div class="rich-text__text--{{ section.settings.text_size }} rte-setting sub-heading">
                    {{ section.settings.content }}
                </div>
            {% endif %}
            </div>
            {% if section.settings.button_text != blank %}
            <div class="cta-wrapper">
                <a href="{% if section.settings.button_link %}{{ section.settings.button_link }}{% else %}#{% endif %}" 
                   class="btn btn--primary"
                   style="background-color: {{ section.settings.btn_bg_color }}; color: {{ section.settings.btn_txt_color }};">
                    {{ section.settings.button_text | escape }}
                </a>
            </div>
            {% endif %}
        {% endif %}
        </div>
    </div>
</div>

{% schema %}
{
    "name": "Text and CTA",
    "settings": [
        {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "Some heading"
        },
        {
            "type": "text",
            "id": "content",
            "label": "Content",
            "default": "Add new content"
        },
        {
            "type": "select",
            "id": "text_size",
            "label": "Text Size",
            "default": "medium",
            "options": [
                {
                    "label": "Small",
                    "value": "small"
                },
                {
                    "label": "Medium",
                    "value": "medium"
                },
                {
                    "label": "Large",
                    "value": "large"
                }
            ]
        },
        {
            "type": "text",
            "id": "button_text",
            "label": "Button Text"
        },
        {
            "type": "color",
            "id": "btn_bg_color",
            "label": "Button background Color",
            "default": "#000"
        },
        {
            "type": "color",
            "id": "btn_txt_color",
            "label": "Button text color",
            "default": "#fff"
        },
        {
            "type": "url",
            "id": "button_link",
            "label": "Button Link"
        }
    ],
    "presets": [
        {
            "name": "Text and CTA",
            "category": "Text"
        }
    ]
}
{% endschema %}

