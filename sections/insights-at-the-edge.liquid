<div class="insight-at-the-edge {{ section.settings.class_list }}" {% if section.settings.bg_image %} style="background-image: url('{{ section.settings.bg_image | img_url: '2048x' }}'); background-position: {{ section.settings.bg_alignment }}; background-repeat: no-repeat; background-size: cover;" {% endif %}>
    <div class="page-width">
        {% if section.settings.section_image != blank %}
        <div class="section-image-wrapper">
            <img class="section-image"
                src="{{ section.settings.section_image | img_url: '300x300' }}"
                alt="{{ section.settings.section_image.alt | escape }}">
        </div>
        {% endif %}

        {% if section.settings.title_image != blank or 
            section.settings.title != blank or 
            section.settings.sub_title != blank or 
            section.settings.content != blank or 
            section.settings.button_label != blank %}
        <div class="section-content-wrapper">
            {% if section.settings.title_image != blank %}
            <div class="title-image-wrapper">
                <img class="title-image"
                src="{{ section.settings.title_image | img_url: '350x' }}"
                alt="{{ section.settings.title_image.alt | escape }}">
            </div>
            {% endif %}

            {% if section.settings.title != blank or section.settings.sub_title != blank %}
            <div class="section-header">
                {% if section.settings.title != blank %}
                <h2 class="section-heading" style="color: {{ section.settings.title_color }};">{{ section.settings.title | escape }}</h2>
                {% endif %}
                {% if section.settings.sub_title != blank %}
                <h3 class="section-subheading" style="color: {{ section.settings.sub_title_color }};">{{ section.settings.sub_title | escape }}</h3>
                {% endif %}
            </div>
            {% endif %}

            {% if section.settings.content != blank %}
            <div class="section-content">
                {{ section.settings.content }}
            </div>
            {% endif %}

            {% if section.settings.button_label != blank %}
            <a href="{% if section.settings.button_link %}{{ section.settings.button_link }}{% else %}#{% endif %}" 
            class="btn btn--primary" 
            style="color: {{ section.settings.button_color }}; background-color: {{ section.settings.button_bg_color }}; border-color: {{ section.settings.button_border_color }};">
                {{ section.settings.button_label | escape }}
            </a>
            {% endif %}
        </div>
        {% endif %}
    </div>
</div>

