.gdpr-wrapper {
    .gdpr-container {
        @media only screen and (min-width: 480px) {
            display: flex;
            align-items: center;
        }

        .gdpr-definition {
            text-shadow: none;
            color: #2e3b44;
            font-weight: 500;
            font-size: 12px;

            @media only screen and (min-width: 480px) {
                font-size: 16px;
                flex: 1;
            }

            .privacy-policy {
                color: #0652af;
                border: none;
                text-decoration: none;

                &:hover {
                    color: #0652af;
                    border-bottom: 1px solid #0652af;
                }
            }
        }

        .gdpr-actions {
            display: flex;
            justify-content: center;
            width: 100% !important;

            @media only screen and (min-width: 480px) {
                align-items: flex-start;
                justify-content: left;
                width: 200px !important;
            }

            .gdpr-accept {
                margin: 0 10px;
                width: 60%;
            }
        }
    }
}
