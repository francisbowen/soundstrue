/*================ Collection Main Content (Also used in MegaMenu and HomePage Collections) ================*/

.page-width {
    .grid-view-item.product-card {
        margin: 0 auto 15px;
    }
}

.grid-view-item__link, .product-card__title {
  color: $color_links !important;
  text-transform:uppercase;
  font-weight: 400;
  text-align:center;
  display: block;
  margin-top: 20px;
  min-height: 50px;
}
.grid__item {
    .price {
        justify-content: center;
        text-align: center;
    }
}
.product-card__image-with-placeholder-wrapper {
    position: relative;
    max-height: unset;
}
.grid-view-item__image-wrapper .grid-view-item__image {
    position: relative;
    top: 0;
    max-width: 100% !important;
}

.product-card:hover, 
.product-card:focus-within {
    .product-card__image-wrapper {
        opacity: 1;
    }

    .product-card__title {
        
    }
}

.product-image-link {
    &:hover {
        .product-card__image-wrapper {
            opacity: 0.8;
        }
    }
}

.grid-view-item__title {
    line-height: 1.4;
    color: #0652af;

    a:hover {
        color: #0652af;
        text-decoration: underline;
    }

    &.product-card__title {
        font-size: 16px;
        font-weight: 500;
        text-transform: unset;
    }

    &.product-author {
        font-size: 14px;
        font-weight: 300;
        text-align: center;
        text-transform: uppercase;
        margin-bottom: 10px;

        .product-author-link {
            &:last-child {
                .comma {
                    display: none;
                }
            }
            &.no-link {
                cursor: default;
                text-decoration: none;
                color: #3e4d58;
            }
        }
    }
}

.price__regular > * {
    display: inline;
}

.price dd {
    margin: 0;
}

.price-item {
    font-size: 15px;
}

.starting-at-label {
    color: #5B6770;
    font-size: 1.125rem !important;
    font-weight: 400;
    white-space: nowrap;
    font-family: "Montserrat", Verdana, Arial, sans-serif;
    @media only screen and (max-width: 767px) {
    font-size: 0.875rem !important;
    }
}

.price__sale {
    margin-left: 2px;
}

.spr-badge {
    text-align: center;
    .spr-badge-starrating {
        display: block;
        .spr-icon {
            font-size: 80%;
        }
    } 
    .spr-badge-caption {
        display: block;
        font-size: 14px;
    }
}

// global classes related to product page and featured product section 
.grid__item {
    .product-single__meta {
        .price {
            justify-content: left;
        }
        .spr-badge {
            text-align: left;
        }
    }
}


