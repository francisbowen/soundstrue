/**
 *  Homepage Custom Homepage Slider Section
 *  ---------------------------------------------
 */

.index-section {
    padding-top: 0;
    padding-bottom: 0;
}

.slick-dotted.slick-slider {
    min-height: 340px;
    @media only screen and (max-width: 767px) {
        min-height: 280px;
    }
}

.slideshow__overlay::before {
    content: '';
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    background-color: #3d4246;
    opacity: 0.4;
    z-index: 2;
}

.slideshow__text-content {
    .slideshow__text-content-list {
        & > li {
            margin-bottom: 0;

            @media only screen and (min-width: 768px) {
                margin-bottom: 12px;
            }
        }
        .slideshow__title,
        .slideshow__subtitle, 
        .slideshow__btn {
            display: inline-block;
        }

        .slideshow__title {
            text-transform: unset;
        }

        .slideshow__title.mega-title {
            font-size: 24px;
            font-weight: 500;
            @media only screen and (min-width: 768px) {
                font-size: 2.5rem;
            }
        }
        .slideshow__subtitle.mega-subtitle {
            font-size: 1.31rem;
        }
    }
}

.slideshow__controls {
    position: unset;

    .slideshow__arrows {
        display: none;
        height: auto;

        @media only screen and (min-width: 640px) {
            display: block;
        }

        .slideshow__arrow {
            display: flex;
            position: absolute;
            top: 50%;
            margin-top: -20px;
            padding: 0;

            &.slideshow__arrow-left {
                left: 20px;
                order: -1;
            }
            &.slideshow__arrow-right {
                right: 20px;
                order: 1;
            }

            .icon {
                width: 35px;
                height: 35px;
                opacity: 0.5;

                @media only screen and (min-width: 768px) {
                    width: 40px;
                    height: 40px;
                }

                &:hover {
                    opacity: 1;
                }
            }
        }
    }
    .slick-dots-wrapper {
        position: absolute;
        bottom: 15px;

        ul.slick-dots {
            li {
                margin: 0 10px;

                & > * {
                    width: 15px;
                    height: 15px;

                    @media only screen and (min-width: 768px) {
                        width: 20px;
                        height: 20px;
                    }
                }
            }
        }
    }
}

