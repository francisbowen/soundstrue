$colorDrawerBorder: #343535;
$colorBorder: #343535;
$gutter: 30px;
$type_body_text_center: center;


/*============================================================================
  Article Page Styles
==============================================================================*/

.article {
    .rte {
        .section-header {
            margin-bottom: 0;
            width: 100%;

            @media only screen and (min-width: 768px) {
                width: -webkit-calc(100% - 270px);
                width: -moz-calc(100% - 270px);
                width: calc(100% - 270px);
            }
    
            .article__title {
                color: $color_heading;
                font-weight: 400;
                font-size: 24px;
                line-height: 28px;
                margin-bottom: 16px;
            }
    
            .article__author,
            .article__date {
                display: none;
            }
        }

        .author-image {
            width: 270px;
            height: 270px;
            border-radius: 100%;
            border: 2px solid $color_white;
            transition: all 0.9s ease;
            max-width: 100%;
            margin: 0 auto 20px;
            float: none;

            @media only screen and (min-width: 768px) {
                float: left;
            }
        }

        & > img {
            display: none;
        }

        .prod_para {
            float: left;
            margin-bottom: 10px;
            color: $color_text;
            font-weight: 300;
            font-size: 16px;
            line-height: 24px;
            width: 100%;

            @media only screen and (min-width: 768px) {
                width: -webkit-calc(100% - 270px);
                width: -moz-calc(100% - 270px);
                width: calc(100% - 270px);
            }

            a {
                color: $color_links;
                font-weight: 400;
                font-size: 16px;
                line-height: 24px;
                text-decoration: none;
                border: none;

                &:hover {
                    text-decoration: underline;
                }
            }
        }
    }

    .social-sharing {
        padding-top: 20px;
        //width: ~"-webkit-calc(100% - 270px)";
        width: calc(100% - 270px);
    }

    .return-link-wrapper {
        display: none;
    }
}