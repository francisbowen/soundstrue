<script src="https://www.google.com/recaptcha/api.js" async defer></script>

<div class="page-width">
  <div class="grid">
    <div class="grid__item medium-up--one-half medium-up--push-one-quarter">

      <div class="form-vertical">

        <h1 class="text-center">{{ 'customer.register.title' | t }}</h1>

        <div class="form-message form-message--error hide" tabindex="0">
          <h2 class="h3 form-message__title hide">Please adjust the following:</h2>
          <ul aria-live="polite"></ul>
        </div>

        <div>
          <form method="post" action="/account" id="RegisterForm" accept-charset="UTF-8" novalidate="novalidate">
            <div class="loading-overlay hide">
              <img src="{{ 'loader.svg' | asset_url }}" />
            </div>

            <input type="hidden" name="form_type" value="create_customer" />
            <input type="hidden" name="utf8" value="âœ“" />

            <div class="indicate"><span class="mark">*</span> Indicates required field</div>

            <div class="field required">
              <label for="RegisterForm-FirstName">First Name<span aria-label="required field"></span></label>
              <input type="text" name="customer[first_name]" id="RegisterForm-FirstName"  autocomplete="given-name">
            </div>

            <div class="field required">
              <label for="RegisterForm-LastName">Last Name<span aria-label="required field"></span></label>
              <input type="text" name="customer[last_name]" id="RegisterForm-LastName"  autocomplete="family-name">
            </div>

            <div class="field required">
              <label for="RegisterForm-email">Email<span aria-label="required field"></span></label>
              <input
                type="email"
                name="customer[email]"
                id="RegisterForm-email"
                class=""
                autocorrect="off"
                autocapitalize="off"
                autocomplete="email"
                aria-required="true">
            </div>

            <div class="field required">
              <label for="RegisterForm-password">Password<span aria-label="required field"></span></label>
              <div class="faux-input">
                <input
                  type="password"
                  name="customer[password]"
                  id="RegisterForm-password"
                  aria-required="true">
                <div class="mask-toggle">show</div>
              </div>
            </div>

            <div class="password-details">
              Password Requirements:
              <ul>
                <li id="min-length">Eight or more characters</li>
                <li id="contains-upper">At least one uppercase letter</li>
                <li id="contains-lower">At least one lowercase letter</li>
                <li id="contains-number">At least one number</li>
                <li id="contains-special">
                  At least one special character:
                  <p>^ $ * . [ ] { } ( ) ? " ! @ # % & / \ , > < ' : ; | _ ~ `</p>
                </li>
              </ul>
            </div>

            <div class="field required">
              <label for="RegisterForm-repassword">Re-enter Password<span aria-label="required field"></span></label>
              <div class="faux-input">
                <input
                  type="password"
                  name="customer[repassword]"
                  id="RegisterForm-repassword"
                  aria-required="true">
                <div class="mask-toggle">show</div>
              </div>
            </div>

            <div id="recaptcha-wrapper">
              <div class="g-recaptcha" data-sitekey="6LcA1vUUAAAAANdV0hj2ciLUSJuRJBp4LpGAyog2"></div>
            </div>

            <p class="text-center">
              <input type="submit" value="Create" class="login_btn btn">
            </p>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
